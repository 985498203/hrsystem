<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.hxzy.hrsystem.entity">
	<class name="Dept" table="tb_dept">
		<id name="dept_id" column="dept_id">
			<!-- 主键生成策略 为sequence -->
			<generator class="sequence">
				<param name="sequence">
					seq_dept_id
				</param>
			</generator>
		</id>
		<property name="dept_name" column="dept_name"></property>
		<!--表示和员工的关系 -->
        <!--set标签的name属性:多的一方的集合的名字  -->
        <set name="userSet">
            <!--key的 column表示多的一方外键名 -->
            <key column="dept_id"/>
            <!--one-to-many的class属性表示多的一方类的全限定名  -->
            <one-to-many class="User"/>
        </set>		
		
	</class>
</hibernate-mapping>