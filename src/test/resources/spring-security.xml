<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
	xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans        
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/security       
    http://www.springframework.org/schema/security/spring-security.xsd">


	<!-- 开启注解 -->
	<context:annotation-config />

	<beans:bean id="invocationSecurityMetadataSource"
		class="com.hxzy.hrsystem.config.MyFilterInvocationSecurityMetadataSource">
	</beans:bean>
	<!-- 认证类 -->
	<beans:bean id="myUserDetailsService"
		class="com.hxzy.hrsystem.config.MyUserDetailsService"></beans:bean>

	<beans:bean id="myAccessDecisionManager"
		class="com.hxzy.hrsystem.config.MyAccessDecisionManager"></beans:bean>

	<beans:bean id="mySecurityInterceptor"
		class="com.hxzy.hrsystem.filter.MySecurityInterceptor">
		<beans:property name="securityMetadataSource"
			ref="invocationSecurityMetadataSource"></beans:property>
		<beans:property name="accessDecisionManager"
			ref="myAccessDecisionManager"></beans:property>
	</beans:bean>



	<!--过滤资源 start -->
	<!--不进行拦截的静态资源 -->
	<http pattern="/static/**" security="none" />
	<http security="none" pattern="*.js" />
	<http security="none" pattern="*.css" />
	<http auto-config="true" use-expressions="false">
		<!--使用自带的登录表单 -->
		<form-login login-page="/user/login.html"
			password-parameter="password" username-parameter="username"
			authentication-failure-url="/user/login.html?error=-1"
			authentication-success-forward-url="/main.html" />
		<logout logout-url="/logout" />
	</http>
	<authentication-manager>
		<authentication-provider
			user-service-ref="myUserDetailsService">
		</authentication-provider>
	</authentication-manager>
</beans:beans>
